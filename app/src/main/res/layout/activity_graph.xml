<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_bg"
    tools:context=".Graph">


    <!--line graph view where we will
        be displaying our data-->

    <!-- Weight Graph -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/cardbackground">

        <TextView
            android:id="@+id/idTextView_Weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="@string/weight_text"
            android:textColor="@color/red_button"
            android:textSize="30sp"
            android:textStyle="bold" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/idGraphView_Weight"
            android:layout_width="match_parent"
            android:layout_below="@id/idTextView_Weight"
            android:layout_marginTop="50dp"
            android:layout_height="264dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true" />

    </RelativeLayout>

    <!-- BMI Graph -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/cardbackground">

        <TextView
            android:id="@+id/idTextView_BMI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="@string/bmi_text"
            android:textColor="@color/red_button"
            android:textSize="30sp"
            android:textStyle="bold" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/idGraphView_BMI"
            android:layout_width="match_parent"
            android:layout_below="@id/idTextView_BMI"
            android:layout_height="264dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_alignParentTop="true"/>

    </RelativeLayout>



</RelativeLayout>